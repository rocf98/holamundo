<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lista_asistencias"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.elro.nopapers.ListaAsistencias"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:weightSum="1">

        <TextView
            android:text="Buscar por fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView27"
            android:layout_weight="0.27" />

        <TextView
            android:text="Día"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fecha1"
            android:layout_weight="0.27" />

        <TextView
            android:text="a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView37"
            android:layout_weight="0.27" />

        <TextView
            android:text="Día"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fecha2"
            android:layout_weight="0.27" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:weightSum="1"
        android:layout_weight="0.81">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="415dp"
            android:id="@+id/listviewfechas" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <Button
            android:text="Consultar"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:id="@+id/consultarasistencias"
            android:layout_weight="1"
            android:background="@drawable/mybutton" />

    </LinearLayout>

</LinearLayout>
