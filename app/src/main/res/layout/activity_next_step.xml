<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.elro.nopapers.NextStep">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Criterios Evaluativos"
            android:id="@+id/textView15"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:layout_below="@+id/linearLayout2"
        android:id="@+id/linearLayout5">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:id="@+id/linearLayout3"
            android:layout_gravity="right">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.02"
            android:weightSum="1">

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Exámen"
                android:id="@+id/examencheck"
                android:checked="false"
                android:enabled="true"
                android:clickable="false" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/cajaexamen"
                android:textAlignment="center" />

            <TextView
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="%"
                android:id="@+id/textView16"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.02"
            android:weightSum="1" >

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Libreta"
                android:id="@+id/libretacheck"
                android:checked="false"
                android:enabled="true" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/cajalibreta"
                android:textAlignment="center" />

            <TextView
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="%"
                android:id="@+id/textView17"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.02"
            android:weightSum="1" >

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Tareas"
                android:id="@+id/tareascheck"
                android:checked="false" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/cajatareas"
                android:textAlignment="center" />

            <TextView
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="%"
                android:id="@+id/textView18"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.02"
            android:weightSum="1" >

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Participación"
                android:id="@+id/particheck"
                android:checked="false" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/cajaparticipacion"
                android:textAlignment="center" />

            <TextView
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="%"
                android:id="@+id/textView19"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.02"
            android:weightSum="1" >

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Trabajos"
                android:id="@+id/trabajoscheck"
                android:checked="false" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/cajatrabajos"
                android:textAlignment="center" />

            <TextView
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="%"
                android:id="@+id/textView20"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:weightSum="1"
            android:layout_gravity="center_horizontal">

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Asistencias"
                android:id="@+id/asistenciascheck"
                android:checked="false"
                />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/cajaasistencias"
                android:textAlignment="center" />

            <TextView
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="%"
                android:id="@+id/textView22"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.02"
            android:weightSum="1" >

            <CheckBox
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Otros"
                android:id="@+id/otroscheck"
                android:checked="false"
                 />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/cajaotros"
                android:textAlignment="center" />

            <TextView
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="%"
                android:id="@+id/textView21"
                android:textSize="25dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:id="@+id/linearLayout4"
        android:layout_gravity="right"
        android:layout_below="@+id/linearLayout5"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/linearLayout6"
        android:layout_gravity="right"
        android:layout_below="@+id/linearLayout4"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Porcentaje:"
            android:id="@+id/textView23" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/porcentaje"
            android:layout_weight="0.27"
            android:text="0"
            android:textColor="#0386e9"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:id="@+id/textView24" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:id="@+id/btnsiguiente"
        android:background="@drawable/mybutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="prueba"
        android:id="@+id/prueba"
        android:layout_above="@+id/btnsiguiente"
        android:layout_toStartOf="@+id/btnsiguiente" />

</RelativeLayout>
