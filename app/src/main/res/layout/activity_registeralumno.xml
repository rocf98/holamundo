<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.elro.nopapers.Registeralumno"
    android:background="#0091ff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#0091ff"
        android:weightSum="1"
        android:id="@+id/linearLayout8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="1" >

            <ImageView
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:id="@+id/imageView5"
                android:background="@drawable/logo" />
        </LinearLayout>

        <EditText
            android:layout_width="343dp"
            android:layout_height="40dp"
            android:id="@+id/nombrecompleto2"
            android:inputType="textPersonName"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:hint="Nombre de Usuario"
            android:textAlignment="center"
            android:background="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView28"
            android:layout_gravity="center_horizontal"
            android:textColor="#0091ff" />

        <EditText
            android:layout_width="343dp"
            android:layout_height="40dp"
            android:id="@+id/nombre2"
            android:inputType="textPersonName"
            android:layout_below="@+id/nombre2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:hint="Usuario"
            android:textAlignment="center"
            android:background="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView29"
            android:layout_gravity="center_horizontal"
            android:textColor="#0091ff" />

        <EditText
            android:layout_width="343dp"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:id="@+id/emailreg2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:hint="Email"
            android:textAlignment="center"
            android:background="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView30"
            android:layout_gravity="center_horizontal"
            android:textColor="#0091ff" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Spinner
                android:layout_width="214dp"
                android:layout_height="53dp"
                android:id="@+id/spinnercuenta"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <EditText
            android:layout_width="343dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password2"
            android:layout_below="@+id/nombre2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:hint="ContraseÃ±a"
            android:textAlignment="center"
            android:background="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView31"
            android:layout_gravity="center_horizontal"
            android:textColor="#0091ff" />

        <EditText
            android:layout_width="343dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/age2"
            android:layout_below="@+id/password2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:hint="Edad"
            android:textAlignment="center"
            android:background="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView32"
            android:layout_gravity="center_horizontal"
            android:textColor="#0091ff" />

        <Button
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            android:id="@+id/bregister2"
            android:layout_below="@+id/age2"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/age2"
            android:background="@drawable/mybutton" />
    </LinearLayout>

</RelativeLayout>
