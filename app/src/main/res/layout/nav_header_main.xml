<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/background"
    android:orientation="vertical"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/perfil"
        app:border_color="#FF000000"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="18dp"
        android:layout_alignTop="@+id/nombrecompleto"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:id="@+id/nombrecompleto"
        android:text="@string/nombrecompleto"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/profile_image"
        android:layout_marginStart="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/correoelectronico"
        android:gravity="left"
        android:textSize="14sp"
        android:textColor="#fff"
        android:text="@string/correoelectronico"
        android:layout_below="@+id/nombrecompleto"
        android:layout_alignStart="@+id/nombrecompleto" />

</RelativeLayout>
